<Page x:Class="WorkTimeManager.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkTimeManager.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="300"
      Title="Home"
      Background="White">
    <Page.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Text="Employees" 
                PreviewMouseDown="NavigateToEmployees"
                Style="{StaticResource DarkHoverBackground}"/>
            <TextBlock
                Text="Work Time"
                PreviewMouseDown="NavigateToWorkTime"
                Style="{StaticResource DarkHoverBackground}"/>
            <TextBlock 
                Text="Add New Employee"
                PreviewMouseDown="NavigateToNewEmployee"
                Style="{StaticResource DarkHoverBackground}"/>
        </StackPanel>
    </Grid>
</Page>
